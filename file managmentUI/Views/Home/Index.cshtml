@model IEnumerable<file_managmentUI.Models.FileDTO>

<div class="container mt-5">
    <h1>Dosya Yükleme</h1>
    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Dosya Seç</label>
            <input type="file" class="form-control-file" id="file" name="file">
        </div>
        <button type="submit" class="btn btn-primary">Yükle</button>
    </form>
    <hr />
    <h2>Yüklenen Dosyalar</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Dosya Adı</th>
                <th>Boyut</th>
                <th>İndir</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>@file.Size</td>
                    <td><a asp-action="DownloadFile" asp-route-fileName="@file.FileName" class="btn btn-secondary">İndir</a></td>
                    <td><a asp-action="DeleteFile" asp-route-fileName="@file.FileName" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
