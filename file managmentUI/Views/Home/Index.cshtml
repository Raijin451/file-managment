@{
    ViewData["Title"] = "Dosya Yükleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Dosya Yükleme</h1>

<div class="row">
    <div class="col-lg-6">
        <form enctype="multipart/form-data" asp-action="UploadFile" method="post">
            <div class="form-group">
                <label for="file">Dosya Seç</label>
                <input type="file" class="form-control" name="file" />
            </div>
            <button type="submit" class="btn btn-primary">Yükle</button>
        </form>
    </div>
</div>

<h2 class="h4 mb-4 text-gray-800">Yüklenen Dosyalar</h2>
<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Dosya Adı</th>
                    <th>Boyut</th>
                    <th>İndir</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@file.FileName</td>
                        <td>@file.Size</td>
                        <td><a href="@Url.Action("DownloadFile", new { fileName = file.FileName })" class="btn btn-success">İndir</a></td>
                        <td><a href="@Url.Action("DeleteFile", new { fileName = file.FileName })" class="btn btn-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
